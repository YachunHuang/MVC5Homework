@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kiwi's MVC</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="~/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- MORRIS CHART STYLES-->
    <link href="~/assets/js/morris/morris-0.4.3.min.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("ReadCustomView", "Custom")">Kiwi's MVC</a>
            </div>
            <div style="padding: 15px 50px 5px 50px;float: right;font-size: 16px;">
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "EditProfile", "Account",
               routeValues: null, htmlAttributes: new { account = User.Identity.GetUserName() }) &nbsp;
                <a href="@Url.Action("Logout", "Account")" class="btn btn-danger square-btn-adjust">Logout</a>
            </div>
        </nav>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li class="text-center">
                        <img src="~/assets/img/Kiwi.jpg" class="user-image img-responsive" />
                    </li>
                    <li>
                        <a class="active-menu" href="@Url.Action("ReadCustomView", "Custom")"><i class="fa fa-dashboard fa-3x"></i> 客戶清單</a>
                    </li>
                    <li>
                        <a href="@Url.Action("客戶資料Index", "客戶資料")"><i class="fa fa-desktop fa-3x"></i> 客戶資料管理</a>
                    </li>
                    <li>
                        <a href="@Url.Action("客戶聯絡人Index", "客戶聯絡人")"><i class="fa fa-qrcode fa-3x"></i> 客戶聯絡人管理</a>
                    </li>
                    <li>
                        <a href="@Url.Action("客戶銀行資訊Index", "客戶銀行資訊")"><i class="fa fa-bar-chart-o fa-3x"></i> 客戶銀行帳戶管理</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Login", "Account")"><i class="fa fa-bolt fa-3x"></i> 登入</a>
                    </li>
                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="@Url.Action("Index","Home")">Home</a>
                    <i class="icon-angle-right"></i>
                </li>
                @RenderSection("breadcrumb", false)
                @if (!IsSectionDefined("breadcrumb"))
                {
                    <li><a href="#">N/A</a></li>
                }
            </ul>

            @RenderBody()
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="~/assets/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/assets/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="~/assets/js/jquery.metisMenu.js"></script>
    <!-- MORRIS CHART SCRIPTS -->
    <script src="~/assets/js/morris/raphael-2.1.0.min.js"></script>
    <script src="~/assets/js/morris/morris.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/assets/js/custom.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>